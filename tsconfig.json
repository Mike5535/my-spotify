{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utils/*":  ["src/utils/*"],
      "@components/*":  ["src/components/*"],
      "@config/*":  ["src/config/*"],
      "@pages/*":  ["src/pages/*"],
      "@assets/*":  ["src/assets/*"]
    },
    "target": "es2017",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "jsx": "react"
  },
  "exclude": ["node_modules"],
}